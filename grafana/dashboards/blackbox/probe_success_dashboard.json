{
  "id": null,
  "uid": "blackbox-probe-full",
  "title": "Blackbox Exporter - All Probes (мониторинг доменов)",
  "tags": ["blackbox", "http", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "panels": [
    {
      "type": "timeseries",
      "title": "Probe Success Status",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 10 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "mappings": [
            { "type": "value", "options": { "0": { "text": "Fail", "color": "red" }, "1": { "text": "Success", "color": "green" } } }
          ]
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "probe_success{instance=\"https://leads.su\"}",
          "legendFormat": "leads.su",
          "refId": "A"
        },
        {
          "expr": "probe_success{instance=\"https://tracker.leads.su\"}",
          "legendFormat": "tracker.leads.su",
          "refId": "B"
        },
        {
          "expr": "probe_success{instance=\"https://api.leads.su\"}",
          "legendFormat": "api.leads.su",
          "refId": "C"
        }
      ],
      "options": {
        "tooltip": { "mode": "allSeries" },
        "legend": { "displayMode": "table", "placement": "bottom" }
      }
    },
    {
      "type": "stat",
      "title": "Latest Status",
      "gridPos": { "x": 0, "y": 11, "w": 24, "h": 4 },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "red" },
              { "value": 1, "color": "green" }
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "probe_success{job=\"blackbox-http\"}",
          "legendFormat": "{{instance}}",
          "refId": "D"
        }
      ]
    }
  ]
}
